<html>
    <head>
        <title>
            <%= title %>
        </title>
        <link href="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.1/noty.min.css" rel="stylesheet">
        <script src="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.1/noty.min.js" type="text/javascript"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
        <link rel="stylesheet" type="text/css" href="<%= locals.assetPath('css/layout.css') %>">
        <link rel="stylesheet" type="text/css" href="<%= locals.assetPath('css/header.css') %>">
        <link rel="stylesheet" type="text/css" href="<%= locals.assetPath('css/footer.css') %>">

        <%- style %>
    </head>
    <body>
        <%- include('_header'); %>

        <main id="layout-main">
            <%- body %>

        </main>

        <%- include('_footer'); %>

        <%- script %>

        <% if(flash.success && flash.success.length > 0) { %>
            <script>
                new Noty({
            theme: 'relax',
            text: '<%= flash.success %>',
            type: 'success',
            layout: 'topRight',
            timeout: 1500
            }).show();
            </script>
        <% }else if(flash.error && flash.error.length > 0) { %>
            <script>
                new Noty({
            theme: 'relax',
            text: '<%= flash.error %>',
            type: 'error',
            layout: 'topRight',
            timeout: 1500
            }).show();
            </script>
        <% } %>
    </body>
</html>